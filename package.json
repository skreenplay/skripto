{
  "name": "skripto",
  "main": "public/electron.js",
  "version": "0.1.1",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "fs": "0.0.1-security",
    "react": "^16.4.1",
    "react-autosize-textarea": "^3.0.3",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^1.1.4"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "dev": "nf start",
    "electron-dev": "electron dev-scripts/electron-main.js",
    "react-dev": "react-scripts start",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder --dir",
    "prepackage": "npm run build",
    "package": "electron-builder"
  },
  "build": {
    "productName": "Skripto",
    "appId": "com.skreenplay.skripto",
    "icon": "build/icon.icns",
    "mac": {
      "category": "public.app-category.utilities",
      "extendInfo": [
        {
          "CFBundleDocumentTypes": [
            {
              "CFBundleTypeExtensions": [
                "skripto"
              ],
              "CFBundleTypeIconFile": "skriptofile.icns",
              "CFBundleTypeName": "public.skripto",
              "CFBundleTypeRole": "Editor",
              "LSHandlerRank": "Alternate",
              "LSItemContentTypes": [
                "public.skripto"
              ]
            }
          ],
          "UTImportedTypeDeclarations": [
            {
              "UTTypeConformsTo": [
                "public.data"
              ],
              "UTTypeIdentifier": "public.skripto",
              "UTTypeTagSpecification": {
                "com.apple.ostype": "PDF",
                "public.filename-extension": [
                  "skripto"
                ],
                "public.mime-type": "application/skripto"
              }
            }
          ]
        }
      ]
    },
    "dmg": {
      "icon": "installer.icns"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "files": [
    "build/**/*",
    "node_modules/**/*",
    "assets/**/*"
  ],
  "devDependencies": {
    "electron": "^2.0.3",
    "electron-builder": "^20.16.0",
    "foreman": "^3.0.0"
  }
}
